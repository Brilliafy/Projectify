datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

enum Role {
  ADMIN
  TEAM_LEADER
  MEMBER
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  fullName  String
  role      Role     @default(MEMBER)
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
}